<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    
<EditText
    android:gravity="top"
        android:id="@+id/editTextCompliments"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".50" 
        android:hint="@string/editTextHint"
>
 		
        <requestFocus />
</EditText>    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".25">
    
    <Button android:id="@+id/uploadPictureCompliment"
    android:layout_width="0dp"
    android:layout_weight=".5"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text="Upload Picture" />
    
    <Button android:id="@+id/submitCompliment"
  android:layout_width="0dp"
    android:layout_weight=".5"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text="Submit Compliment" />
</LinearLayout>
 <Button android:id="@+id/viewCompliments"
  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text="View Compliments" />
</LinearLayout>