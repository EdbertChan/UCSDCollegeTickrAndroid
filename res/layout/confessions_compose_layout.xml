<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editTextConfessions"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:gravity="top"
        android:hint="@string/editTextHint" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/uploadPictureConfession"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight=".5"
            android:text="Upload Picture" />

        <Button
            android:id="@+id/submitConfession"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight=".5"
            android:text="Submit Confession" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/confessionImageUploadPreview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dip"
            android:src="@drawable/logo" />

        <Button
            android:id="@+id/confessionCancelImageUpload"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#fff" />
    </LinearLayout>
    <Button
        android:id="@+id/viewConfession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="View Confessions"
        android:visibility="gone" />

</LinearLayout>